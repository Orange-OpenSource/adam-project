<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="font_lunch_selected_time">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_lunch_selected_time_size</item>
    </style>

    <style name="font_simple_white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="font_glycaemia_hour">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_glycaemia_value">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_glycaemia_value_size</item>
    </style>

    <style name="font_glycaemia_comment">
        <item name="android:textSize">@dimen/font_glycaemia_comment_size</item>
    </style>

    <style name="font_diet_item">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_diet_item_size</item>
    </style>

    <style name="font_lunch_item_hour">
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_lunch_item_content">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_diet_item_size</item>
    </style>

</resources>
